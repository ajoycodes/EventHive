<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="24dp"
            android:background="@color/card_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizer Dashboard"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage your events"
                android:textSize="15sp"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Quick Actions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <!-- My Events Button -->
                <LinearLayout
                    android:id="@+id/btnMyEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Events"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="16dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_back"
                        android:rotation="180"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <!-- Create Event Button -->
                <LinearLayout
                    android:id="@+id/btnCreateEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/text_primary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Create New Event"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="16dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_back"
                        android:rotation="180"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <!-- Statistics -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistics"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Total Events -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/card_bg"
                        android:padding="20dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/text_primary"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Events"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvTotalEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <!-- Active Events -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/card_bg"
                        android:padding="20dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_home"
                            app:tint="@color/text_primary"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvActiveEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Sign Out Button -->
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Sign Out"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_primary"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/corner_xlarge"
        app:cardElevation="@dimen/elevation_small"
        app:cardBackgroundColor="@color/nav_background"
        android:layout_margin="@dimen/spacing_l">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_height"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/bottom_nav_padding_vertical"
            android:paddingHorizontal="@dimen/bottom_nav_padding_horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/navHome"
                android:layout_width="@dimen/bottom_nav_icon_size"
                android:layout_height="@dimen/bottom_nav_icon_size"
                android:src="@drawable/ic_home"
                android:background="@drawable/round_white_bg"
                android:padding="6dp"
                app:tint="@color/nav_active"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/navEvents"
                android:layout_width="@dimen/bottom_nav_icon_size"
                android:layout_height="@dimen/bottom_nav_icon_size"
                android:src="@drawable/ic_calendar"
                app:tint="@color/nav_inactive"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/navNotifications"
                android:layout_width="@dimen/bottom_nav_icon_size"
                android:layout_height="@dimen/bottom_nav_icon_size"
                android:src="@drawable/ic_notifications"
                app:tint="@color/nav_inactive"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/navSettings"
                android:layout_width="@dimen/bottom_nav_icon_size"
                android:layout_height="@dimen/bottom_nav_icon_size"
                android:src="@drawable/ic_settings"
                app:tint="@color/nav_inactive"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
