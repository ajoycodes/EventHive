<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="20dp"
        android:gravity="center_vertical"
        android:background="@color/card_background">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Events"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_calendar"
            android:padding="8dp"
            app:tint="@color/text_secondary"/>
    </LinearLayout>

    <!-- Events List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/navCard"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"/>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/card_icon_bg"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:paddingHorizontal="32dp"
            android:gravity="center">

            <!-- Home -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home"
                android:background="@drawable/round_white_bg"
                android:padding="6dp"/>
                
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            
            <!-- Tickets -->
            <ImageView
                android:id="@+id/navTicket"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_calendar" 
                android:contentDescription="My Tickets"
                app:tint="@color/white"
                android:alpha="0.6"/>

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

            <!-- Notifications -->
            <ImageView
                android:id="@+id/navNotifications"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Notifications"
                app:tint="@color/white"
                android:alpha="0.6"/>
            
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

            <!-- Settings/Logout -->
            <ImageView
                android:id="@+id/navLogout"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/white"
                android:alpha="0.6"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
