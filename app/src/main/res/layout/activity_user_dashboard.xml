<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_background">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_l"
        android:paddingTop="@dimen/status_bar_padding"
        android:paddingBottom="@dimen/spacing_l"
        android:gravity="center_vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Events"
            style="@style/TextAppearance.Display"
            android:textColor="@color/text_primary"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_calendar"
            android:padding="8dp"
            app:tint="@color/text_secondary"/>
    </LinearLayout>

    <!-- Events List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/navCard"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"/>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/navCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_l"
        app:cardCornerRadius="@dimen/corner_xlarge"
        app:cardBackgroundColor="@color/nav_background"
        app:cardElevation="@dimen/elevation_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_height"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/bottom_nav_padding_vertical"
            android:paddingHorizontal="@dimen/bottom_nav_padding_horizontal"
            android:gravity="center">

            <!-- Home (Active) -->
            <ImageView
                android:layout_width="@dimen/bottom_nav_icon_size"
                android:layout_height="@dimen/bottom_nav_icon_size"
                android:src="@drawable/ic_home"
                android:background="@drawable/round_white_bg"
                android:padding="6dp"
                app:tint="@color/nav_active"/>
                
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            
            <!-- Tickets -->
            <ImageView
                android:id="@+id/navTicket"
                android:layout_width="@dimen/bottom_nav_icon_size"
                android:layout_height="@dimen/bottom_nav_icon_size"
                android:src="@drawable/ic_calendar" 
                android:contentDescription="My Tickets"
                app:tint="@color/nav_inactive"
                android:alpha="1.0"/>

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

            <!-- Notifications -->
            <ImageView
                android:id="@+id/navNotifications"
                android:layout_width="@dimen/bottom_nav_icon_size"
                android:layout_height="@dimen/bottom_nav_icon_size"
                android:src="@drawable/ic_notifications"
                android:contentDescription="Notifications"
                app:tint="@color/nav_inactive"
                android:alpha="1.0"/>
            
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

            <!-- Logout -->
            <ImageView
                android:id="@+id/navLogout"
                android:layout_width="@dimen/bottom_nav_icon_size"
                android:layout_height="@dimen/bottom_nav_icon_size"
                android:src="@drawable/ic_logout"
                android:contentDescription="Logout"
                app:tint="@color/nav_inactive"
                android:alpha="1.0"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
