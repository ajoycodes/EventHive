<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#EFF3F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Logo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
           >


            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_logo"
                android:background="@drawable/round_logo_bg"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventHive"
                android:fontFamily="@font/urbanist"
                android:fontWeight="700"
                android:textColor="#111827"
                android:textSize="28sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- White Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp"
            android:background="#ffffff"
            android:elevation="2dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="26sp"
                android:fontFamily="@font/urbanist"
                android:fontWeight="700"
                android:textColor="#1F2937"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account to continue!"
                android:textSize="14sp"
                android:fontFamily="@font/urbanist"
                android:fontWeight="400"
                android:textColor="#6B7280"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- First Name -->
            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ajoy"
                android:fontFamily="@font/urbanist"
                android:padding="14dp"
                android:background="@drawable/input_bg"
                android:textColor="#111"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="14dp"/>

            <!-- Last Name -->
            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Saha"
                android:fontFamily="@font/urbanist"
                android:padding="14dp"
                android:background="@drawable/input_bg"
                android:textColor="#111"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="14dp"/>

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="ajoy.2207037@gmail.com"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/urbanist"
                android:padding="14dp"
                android:background="@drawable/input_bg"
                android:textColor="#111"
                android:textColorHint="#9CA3AF"
                android:layout_marginBottom="14dp"/>

            <!-- Role Dropdown -->
            <Spinner
                android:id="@+id/spinnerRole"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_bg"
                android:padding="14dp"
                android:fontFamily="@font/urbanist"
                android:popupTheme="@style/Widget.AppCompat.Spinner"/>

            <!-- Phone Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:background="@drawable/input_bg"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_flag_bd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+880"
                    android:fontFamily="@font/urbanist"
                    android:textSize="14sp"
                    android:textColor="#111"
                    android:layout_marginStart="8dp"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="1342 456 243"
                    android:inputType="phone"
                    android:fontFamily="@font/urbanist"
                    android:padding="10dp"
                    android:textColor="#111"
                    android:textColorHint="#9CA3AF"/>
            </LinearLayout>

            <!-- Password -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="*******"
                android:inputType="textPassword"
                android:fontFamily="@font/urbanist"
                android:padding="14dp"
                android:background="@drawable/input_bg"
                android:textColor="#111"
                android:textColorHint="#9CA3AF"
                android:layout_marginTop="14dp"/>

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Register"
                android:fontFamily="@font/urbanist"
                android:fontWeight="700"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_primary"
                android:layout_marginTop="24dp"/>

            <!-- Login Redirect -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:text="Already have an account?"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:fontFamily="@font/urbanist"/>

                <TextView
                    android:id="@+id/tvLogin"
                    android:text=" Login"
                    android:textColor="#6064FA"
                    android:textSize="14sp"
                    android:fontFamily="@font/urbanist"
                    android:fontWeight="700"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>