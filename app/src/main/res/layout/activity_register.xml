<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB"
    tools:context=".activities.RegisterActivity">

    <!-- White card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/registerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="24dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo / title -->
            <TextView
                android:id="@+id/registerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#151826"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/registerSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Create an account to continue!"
                android:textColor="#7B7F8E"
                android:textSize="12sp" />

            <!-- Name -->
            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@android:drawable/edit_text"
                android:hint="Full name"
                android:padding="12dp"
                android:textColor="#151826"
                android:textColorHint="#B0B3C0"
                android:inputType="textPersonName" />

            <!-- Email -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:hint="Email"
                android:padding="12dp"
                android:textColor="#151826"
                android:textColorHint="#B0B3C0"
                android:inputType="textEmailAddress" />

            <!-- Role (user / organizer / admin) -->
            <EditText
                android:id="@+id/roleInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:hint="Role (User / Organizer / Admin)"
                android:padding="12dp"
                android:textColor="#151826"
                android:textColorHint="#B0B3C0"
                android:inputType="text" />

            <!-- Password -->
            <EditText
                android:id="@+id/passInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@android:drawable/edit_text"
                android:hint="Password"
                android:padding="12dp"
                android:textColor="#151826"
                android:textColorHint="#B0B3C0"
                android:inputType="textPassword" />

            <!-- Register button -->
            <Button
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="#6366F1"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <!-- Already have account -->
            <TextView
                android:id="@+id/goLoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Already have an account? Login"
                android:textColor="#7B7F8E"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>