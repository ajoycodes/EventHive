<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EventHive" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Apple-inspired Blue Theme -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">#0063CC</item>
        <item name="colorSecondary">@color/brand_primary</item>
        <item name="colorAccent">@color/brand_primary</item>
        
        <!-- Background Colors -->
        <item name="android:windowBackground">@color/brand_background</item>
        <item name="android:statusBarColor">@color/brand_background</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="Theme.EventHive" parent="Base.Theme.EventHive" />
</resources>